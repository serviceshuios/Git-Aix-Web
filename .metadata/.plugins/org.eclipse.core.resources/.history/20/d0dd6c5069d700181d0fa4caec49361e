// getElementById
var titre = document.getElementById("gros_titre");
alert(titre.innerHTML);

// getElementsByTagName
var paragraphes = document.getElementsByTagName("p");
for(i=0;i<paragraphes.length;i++){
	alert(paragraphes[i].innerHTML);
}

//getElementsByClassName

var elements = document.getElementsByClassName("maClasse");
for(i=0;i<elements.length;i++){
	alert(elements[i].innerHTML);
}

// querySelector
// retrouver un lien qui se trouve dans un paragraphe
var lien = document.querySelector("p a");
alert(lien.innerHTML);
// retrouver un élément par son id
var letitre = document.querySelector("#gros_titre");
alert(letitre.innerHTML);





